<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net10.0</TargetFramework>
    <RootNamespace>Sigstore</RootNamespace>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <IsAotCompatible>true</IsAotCompatible>
    <EnableTrimAnalyzer>true</EnableTrimAnalyzer>
    <PackageId>Sigstore</PackageId>
    <Description>A .NET library for generating and verifying Sigstore signatures.</Description>
    <Authors>Mitch Denny</Authors>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/mitchdenny/sigstore-dotnet</PackageProjectUrl>
    <RepositoryUrl>https://github.com/mitchdenny/sigstore-dotnet</RepositoryUrl>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\..\THIRD-PARTY-NOTICES.md" Pack="true" PackagePath="" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="TrustRoot\TufData\root.json" LogicalName="Sigstore.TrustRoot.TufData.root.json" />
    <EmbeddedResource Include="TrustRoot\TufData\root-staging.json" LogicalName="Sigstore.TrustRoot.TufData.root-staging.json" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="NSec.Cryptography" Version="25.4.0" />
    <ProjectReference Include="..\Tuf\Tuf.csproj" />
  </ItemGroup>

</Project>
